
<%= form_for(@project) do |f| %>

<p>
	<%= f.label :name %><br />
	<%= f.text_field :name, autofocus: true %>
</p>

<p>
	<%= f.label :description %><br />
	<%= f.text_area :description, cols:40, rows:7 %>	
</p>

<p>
	<%= f.label :target_pledge_amount %><br />
	<%= f.number_field :target_pledge_amount %>
</p>

<p>
	<%= f.label :pledging_ends_on %><br />
	<%= f.datetime_select :pledging_ends_on %>
</p>

<p>
	<%= f.label :website %><br />
	<%= f.text_field :website %>
</p>

<p>
	<%= f.label :team_members %><br />
	<%= f.text_field :team_members %>
</p>

<p>
	<%= f.label :image_file_name %><br />
	<%= f.text_field :image_file_name, size: 30, 
			placeholder: "GIF, JPG, or PNG file name" %>
</p>


<p>
	<%= f.submit %> |
	<%= link_to "Cancel", projects_path %>
</p>

<% end %>
